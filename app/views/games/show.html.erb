<% if signed_in? %>
    <div class="row">
        <aside class="span4">
            <section>
                <%= render 'shared/user_info' %>
            </section>
            <section>
                <%= render 'shared/userpost_form' %>
            </section>
        </aside>
        <div class="span6">
            <h1> <%= @game.name %> </h1>

            <%= link_to 'add user to game', add_user_url %>
            <%= link_to 'Edit game settings', edit_game_path %>
            <%= link_to 'destroy this game', @game, method: :delete,
                        data: {confirm: "You sure?"},
                        title: @game.name %>
            <table class="table table-striped table-bordered table-condensed table-hover">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Points</th>

                </tr>
                </thead>

                <% @gameUserPoints.each do |gameUserPoint| %>

                    <tr>
                        <td><%= gameUserPoint.user_id %></td>
                        <td><%= gameUserPoint.points %></td>
                        <td><%= link_to "create event", create_event_url %></td>
                    </tr>
                <% end %>

            </table>
        </div>
        <div class="span2">
            hey there

        </div>
    </div>



<% end %>
