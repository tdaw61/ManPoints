<% if signed_in? %>
    <h1> <%= @game.name %> </h1>
    <div class="row">
        <aside class="span5">

            <%= link_to 'add user to game', add_user_url %>
            <%= link_to 'Edit game settings', edit_game_path %>
            <%= link_to 'destroy this game', @game, method: :delete,
                        data: {confirm: "You sure?"},
                        title: @game.name %>
            <table class="table table-striped table-bordered table-condensed table-hover">
                <thead>
                <tr>
                    <th>User</th>
                    <th>Points</th>

                </tr>
                </thead>

                <% @scores.each do |score| %>

                    <tr>
                        <td><%= score.username %></td>
                        <td><%= score.points %></td>
                        <td><%= link_to "create event", create_event_url %></td>
                    </tr>
                <% end %>

            </table>
        </aside>
        <div class="span6">
            <section>
                <%= render 'shared/feed' %>
            </section>

            <section>
                <%= render 'shared/userpost_form' %>
            </section>

        </div>
        <div class="span1">
            hey there
        </div>
    </div>



<% end %>
