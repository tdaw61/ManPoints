<table class="table table-striped table-condensed table-hover table-bordered" id="scores-table">
    <thead>
    <tr>
        <th>User</th>
        <th>Points</th>

    </tr>
    </thead>

    <% @scores.each do |score| %>

        <tr>
            <td><%= link_to score.username, score.user %></td>
            <td><%= score.points %></td>
        </tr>
    <% end %>

</table>
