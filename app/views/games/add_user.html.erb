    <div class="row">
        <div class="span6 offset3">
            <h1> Add new user to <%= @game.name%> </h1>

            <%= form_tag add_user_save_path do %>

                <p>
                    <%= label_tag :user_id %><br>
                    <%= text_field_tag :user_id %>
                </p>

                <%= submit_tag "Add this user", class: "btn btn-large btn-primary" %>
            <% end %>

        </div>
    </div>
