<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">End Game</h3>
</div>
<div class="modal-body">


    <% if flash[:alert] %>
        <div id="error_explanation"><%= flash[:alert] %></div>
    <% end %>

    <%= form_tag end_game_path, id: "form" do %>

        <p>Are you sure you want to end this game? Everything tied to the game will remain but you will not be able to create new votes.</p>
    <div class="modal-footer">
        <%= submit_tag "End Game", class: "btn btn-primary btn-danger", id: "submit", data: {disable_with: "Processing"}, method: :post %>
        <button class="btn btn-primary btn-danger" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
    <% end %>

</div>