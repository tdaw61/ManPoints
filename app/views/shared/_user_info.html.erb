
<div class="topframe-user">
</div>
<div class="profile_container">

<div class="profile_avatar">
   <%= image_tag @user.picture.medium_avatar.url.to_s, class: 'user-profile-gravatar' %>
</div>
<div class="profile_name">
    <h1>
        <%= link_to @user.name, @user %>
    </h1>
</div>
<div class="profile_stats">
    <table>
        <tbody>
            <tr>
                <td> leagues: </td>
                <td> votes created: </td>
                <td> open votes: </td>
            </tr>
            <tr>
                <td width="25%"> <%= @user.leagues.count %></td>
                <td width="40%"> <%= @user.game_events.count %> </td>
                <td width="25%"> <%= @user.open_votes %> </td>
            </tr>
        </tbody>

    </table>

</div>
</div>
