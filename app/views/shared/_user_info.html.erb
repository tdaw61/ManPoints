
<div class="topframe">
</div>
<div class="profile_container">

<div class="profile_avatar">
    <%= link_to gravatar_for(@user, size: 60), @user %>
</div>
<div class="profile_name">
    <h1>
        <%= link_to @user.name, @user %>
    </h1>
</div>
<div class="profile_stats">
    <table style="width: 100%;">
        <tbody>
            <tr>
                <td> leagues: </td>
                <td> votes created: </td>
                <td> open votes: </td>
            </tr>
            <tr>
                <td> <%= @user.leagues.count %></td>
                <td> <%= @user.game_events.count %> </td>
                <td> <%= @user.open_votes %> </td>
            </tr>
        </tbody>

    </table>

</div>
</div>
