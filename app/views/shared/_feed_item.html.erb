<% if feed_item.points.nil? %>

    <li id="<%= feed_item.id %>">
        <%= link_to gravatar_for(feed_item.user), feed_item.user %>
        <span class="user">
          <%= link_to feed_item.user.name, feed_item.user %>
        </span>
        <span class="data"><%= feed_item.data %></span>
        <span class="timestamp">
          Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
        </span>
        <% if current_user?(feed_item.user) %>
            <%= link_to "delete", feed_item, method: :delete,
                        data: { confirm: "You sure?" },
                        title: feed_item.data %>
        <% end %>
    </li>

    <!-- GameEvent section -->
<% else %>

    <li id="<%= feed_item.id %>">
        <%= link_to gravatar_for(feed_item.user), feed_item.user %>
        <span class="user">
          <p><%= link_to feed_item.user.name, feed_item.user %> created a vote</p></br>
            <p> target: <%= feed_item.target_username %> </p>
        </span>

        <ul class="userpost-stats">
            <li>Points: <%= feed_item.points %> </li>
            <li><%= feed_item.data %></li>
        </ul>
        <span class="timestamp">
          Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
        </span>

    </li>

<% end %>
