<% if feed_item.points.nil?
     if feed_item.type == "user_join" %>
        <li id="feed_item_<%= feed_item.id %>">
            <div>
                <%= link_to gravatar_for(feed_item.user), feed_item.user %>
            </div>
            <div class="feed-item-header">
                <%= link_to feed_item.user.name, feed_item.user %>
            </div>
            <div class="feed-item-content"><p class="feed-item-text"><%= feed_item.user.name %> has joined the league </p></div>
        </li>

    <% else %>


        <li id="feed_item_<%= feed_item.id %>">
            <div>
                <%= link_to gravatar_for(feed_item.user), feed_item.user %>
            </div>
            <div class="feed-item-header">
                <%= link_to feed_item.user.name, feed_item.user %>
            </div>
            <div class="feed-item-content">
                <!--<%= image_tag feed_item.picture.url.to_s if feed_item.picture.url.present? %>-->
                <p class="feed-item-text"><%= feed_item.data %></p>
            </div>

            <div class="feed-item-footer">
                <p class="feed-item-text inline">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</p>
                <% if current_user?(feed_item.user) %>
                    <%= link_to "", feed_item, method: :delete,
                                data: {confirm: "You sure?"},
                                title: "delete post",
                                class: "icon-trash opacity-thirtyfive del-link" %>
                <% end %>
            </div>
        </li>
    <% end %>

    <!-- GameEvent section -->
<% else %>

    <li id="<%= feed_item.id %>">

        <div>

            <%= link_to gravatar_for(feed_item.user), feed_item.user %>
        </div>
        <div class="feed-item-header">
            <p class="feed-item-text"><%= link_to feed_item.user.name, feed_item.user %> started a vote
                for <%= link_to feed_item.target_username, feed_item.target_user %> </p>
        </div>
        <div class="feed-item-content">
            <p class="feed-item-text">Points: <%= feed_item.points %></p>

            <p class="feed-item-text"><%= feed_item.data %></p></div>

        <div class="feed-item-footer">
            <p class="feed-item-text inline">Posted <%= time_ago_in_words(feed_item.created_at) %> ago.</p>

            <% if current_user?(feed_item.user) %>
                <%= link_to "", feed_item, method: :delete,
                            data: {confirm: "You sure?"},
                            title: "delete post",
                            class: "icon-trash opacity-thirtyfive del-link" %>
            <% end %>
        </div>


    </li>

<% end %>
