<%= form_for(@comment) do |f| %>

    <% if @comment.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
                <% @comment.errors.full_messages.each do |message| %>
