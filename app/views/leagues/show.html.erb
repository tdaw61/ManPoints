<h1> Welcome to <%= @league.name %></h1>
<div class="row">
    <div class="span5">
        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
            <tr> League members</tr>
            <tr>
                <th>Username</th>


            </tr>
            </thead>

            <% @league_users.each do |user| %>

                <tr>
                    <td><%= user.name %></td>
                </tr>
            <% end %>

        </table>
        <%= link_to "Add user to league", add_user_path %>
    </div>

    <div class="span7">

        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
            <tr> League games</tr>
            <tr>
                <th>game name</th>


            </tr>
            </thead>

            <% @games.each do |game| %>

                <tr>
                    <td><%= link_to game.name, game %></td>
                </tr>
            <% end %>

        </table>
        <p> <%= link_to "Add a game to the league", new_league_game_path(@league) %></p>

    </div>
</div>
