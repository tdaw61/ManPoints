<h1 class="no-margin"> << <%= @league.name %> >> </h1>
<div class="row">
    <div class="span4">

        <div class="user-info ">
            <div class="topframe">
            </div>
            <div class="profile_container">
                <%= render 'shared/league_info', :league => @league %>
            </div>
        </div>
        <div class="margin-bottom">

        </div>
        <!--<%= link_to "Edit league", edit_league_path(@league), class: "btn btn-small btn-primary btn-danger "%>-->

        <div class="games-table">
            <div class="topframe game">
                <div>Your Current games <i class="icon-chevron-down icon-white"></i></div>
                <div class="pts-header">Pts  Pos</div>
            </div>

            <ul class="games-list">


                <% if @games.empty? %>
                    <li> You have no games yet. <%= link_to "Start one now", new_league_game_path(@league) %></li>

                <%
                   else
                     @games.each do |game|
                %>
                        <li>

                            <div class="inline game-title">
                                <%= link_to game.name, game %>
                            </div>
                            <div class="float-right pts-pos-entry">
                                <%= game.points current_user %>

                            </div>

                            <div style="clear: both; height: 1px"></div>
                        </li>

                    <%
                       end
                       end
                    %>
            </ul>
        </div>

        <p> <%= link_to "New Game", new_league_game_path(@league), class: "btn btn-small btn-primary btn-danger" %></p>

    </div>

    <div class="span7">
        <div class="feed feed-left " id="feed">
            <%= render 'shared/feed' %>
        </div>
    </div>

    <div class="span4">


        <div class="league-users">
            <table class="table table-striped table-bordered table-condensed table-hover ">
                <thead>
                <tr>
                    <th colspan="2">Users</th>
                </tr>
                </thead>
                <% @league_users.each do |user| %>
                    <tr>
                        <td><%= link_to user.name, user_path %> </td>
                        <% if @league.is_admin(current_user) %>
                        <% end %>
                    </tr>
                <% end %>

            </table>
        </div>

        <%= link_to "Add User", add_user_path, class: "btn btn-small btn-primary btn-danger" %>
        <!--<%= link_to "Remove User", remove_user_path, class: "btn btn-small btn-primary btn-danger" %>-->
    </div>


</div>
