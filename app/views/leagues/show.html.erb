<h1> Welcome to <%= @league.name %></h1>
<div class="row">
    <div class="span5">
        <div class="user-info">
            <div class="topframe">
            </div>
            <div class="profile_container">
                <%= render 'shared/league_info', :league => @league %>
            </div>
        </div>

        <div class="league-users">
            <table class="table table-striped table-bordered table-condensed table-hover ">
                <thead>
                <tr>
                    <th>Users</th>
                </tr>
                </thead>
                <% @league_users.each do |user| %>
                    <tr>
                        <td><%= user.name %></td>
                    </tr>
                <% end %>

            </table>
        </div>

        <%= link_to "Add User", add_user_path , class: "btn btn-small btn-primary btn-danger"%>
    </div>

    <div class="span7">

        <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
            <tr>
                <th class="center">Games</th>
            </tr>
            </thead>
            <% if @games.empty? %>
                <tr>
                    <td> There are no games yet. <%= link_to "Create one now", new_league_game_path(@league)%> </td>
                </tr>
            <% else %>
            <% @games.each do |game| %>
                <tr>
                    <td><%= link_to game.name, game %></td>
                </tr>
            <% end end %>


        </table>
        <p> <%= link_to "New Game", new_league_game_path(@league), class: "btn btn-small btn-primary btn-danger" %></p>

    </div>
</div>
