<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= @league.name %> >> Add User</h3>
</div>
<div class="modal-body">
        <% if flash[:alert] %>
            <div id="error_explanation"><%= flash[:alert] %></div>
        <% end %>

        <%= form_tag add_user_save_path, id: "form" do %>

            <p>
                <%= label_tag "User email" %>
                <%= text_field_tag :email %>
            </p>

            <%= submit_tag "Add user", class: "btn btn-primary btn-danger", id: "submit", data: {disable_with: "Processing"} %>
        <% end %>
</div>
