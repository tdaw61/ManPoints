<table class="table table-striped table-bordered table-condensed table-hover">
    <p>Votes Pending</p>
    <thead>
    <tr>
        <th>User</th>
        <th>Points</th>
        <th>Status</th>
        <th>You Voted</th>

    </tr>
    </thead>

    <% @event_votes.each do |event_vote| %>

        <tr>
            <td><%= event_vote.username %></td>
            <td><%= event_vote.user_point_value %></td>
            <td><%= event_vote.game_event.yes_votes %> / <%= @game.users.count %> </td>
            <% if event_vote.has_voted? %>
                <td>  <%= event_vote.vote_string %></td>
            <% else %>
                <td><%= link_to "Yes", save_vote_path(:vote => 1, :event_vote_id => event_vote.id), method: :post %>
                    | <%= link_to "No", save_vote_path(:vote => 0, :event_vote_id => event_vote.id), method: :post %></td>
            <% end %>
        </tr>
    <% end %>

</table>