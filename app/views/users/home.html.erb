<% if signed_in? %>
    <div class="row">
        <aside class="span4">
            <section>
                <%= render 'shared/user_info' %>
            </section>
            <section>
                <%= render 'game_table' %>
            </section>
        </aside>
        <div class="span8">
            <p class="center">What's Happening</p>
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>


<div class="center hero-unit">
    <h1>Welcome to ManPoints</h1>

    <h2>
        Legends live here.
    </h2>

    <%= link_to "Sign up now!", 'users/new', class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>

<% end %>