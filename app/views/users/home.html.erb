<% if signed_in? %>
    <div class="row">
        <div class="span4">

            <div class="user-info">
                <div class="topframe">
                </div>
                <div class="profile_container">
                    <%= render 'shared/user_info' %>
                </div>
            </div>
            <section class=" game-table">
                <%= render 'game_table' %>
            </section>
        </div>
        <div class="span8">
            <%= render 'shared/feed' %>
        </div>
    </div>
<% else %>


<%= render 'shared/splash_form' %>


<% end %>