    <table class="table table-striped table-condensed table-hover table-bordered">
        <thead>
        <tr>
            <th>League</th>
            <th>Game</th>
            <th>Points</th>
            <th>Votes Pending</th>
        </tr>
        </thead>
        <% if @scores.empty?  %>
            <tr>
                <td colspan="4"> You have no leagues yet. <%= link_to "Start one now", new_league_path %> </td>
            </tr>


        <%
           else
           @scores.each do |score|
        %>

            <tr>
                <td><%= link_to score.game.league.name, score.game.league %></td>
                <td><%= link_to score.game.name , score.game %></td>
                <td><%= score.points %></td>
                <td><%= current_user.open_votes_by_game score.game %></td>
            </tr>
        <%
           end
        end
        %>


    </table>

